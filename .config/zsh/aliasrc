# some more ls aliases
alias ls='exa --icons --color=always --group-directories-first'
alias ll='exa -lha --icons --color=always --group-directories-first' 
alias shut='/sbin/shutdown now'
alias rbt='/sbin/reboot'
alias v='nvim'
alias ce='cd ~/.config/suckless/dwm && v config.def.h'
alias xmp='sudo /opt/lampp/xampp startmysql; sudo /opt/lampp/xampp startapache'
alias stopserver='sudo /opt/lampp/xampp stop' 
alias tlp='sudo tlp start' 
alias lua='luajit'
# for debian
#alias cat='batcat'
#alias bat='batcat'

#for void linux
alias cat='bat'
alias bat='bat'

#for quickly serving files using python
alias serve='python3 -m http.server 8000'

#for extracting tar.gz files
alias extract='tar -xvzf'

#for ping
alias ping='ping -c 6'

#for zoom (boomer app of tsoding)
alias boomer='boomer -w'

# for disk usage
alias du='du -hsc'
